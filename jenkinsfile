pipeline {
    agent any

    stages {
        stage('Clonar o Repositorio') {
            steps {
                git branch: 'main', url: 'https://github.com/NateBLima/Teste-API-Ebac.git'
            }
        }
        stage('Instalar Dependencias') {
            steps {
                bat 'npm install'           
            }
        }
        stage('Executar Testes') {
            steps {
                bat 'npx cypress run'
            }
        }
    }
}